@import 'nib'

* 
  box-sizing border-box

@font-face
  font-family OpenSans
  src url("fonts/OpenSans-Semibold-webfont.eot")
  src url("fonts/OpenSans-Semibold-webfont.ttf") format('truetype'), url("fonts/OpenSans-Semibold-webfont.eot?#iefix") format('embedded-opentype'), url("fonts/OpenSans-Semibold-webfont.woff") format('woff'), url("fonts/OpenSans-Semibold-webfont.svg#tstar_twregular") format('svg')
  font-weight normal
  font-style normal

html,
body
  font-family OpenSans, sans-serif
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden
  &.light
    background-color #fff
    color #000
  &.dark
    background-color #000
    color #fff

ul.gui
  font-size 0.8em
  position  absolute
  z-index   2
  top       0
  left      0
  padding-left 2em

  li
    display inline-block
    margin-right 3em  